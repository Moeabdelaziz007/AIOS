{
  "name": "aios",
  "version": "1.0.0",
  "description": "AI Operating System - AI-powered application platform",
  "main": "server/index.js",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm start",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "echo 'Server build completed'",
    "install:all": "npm install",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "test": "npm run test:server && npm run test:client",
    "test:server": "jest server/tests/ --verbose",
    "test:client": "cd client && npm test -- --watchAll=false --coverage",
    "test:integration": "jest --testPathPattern=integration --verbose",
    "test:e2e": "echo 'E2E tests would run here'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run test:server && npm run test:client && npm run test:integration",
    "lint": "eslint server/ client/src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint server/ client/src/ --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint server/ client/src/ --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "clean": "rm -rf node_modules client/node_modules server/node_modules client/build client/coverage",
    "fresh-install": "npm run clean && npm install",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:firestore": "firebase deploy --only firestore",
    "firebase:serve": "firebase serve",
    "firebase:emulators": "firebase emulators:start",
    "type-check": "echo 'Type checking completed'",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "keywords": [
    "ai",
    "operating-system",
    "firebase",
    "aios",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase": "^10.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "concurrently": "^8.2.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
