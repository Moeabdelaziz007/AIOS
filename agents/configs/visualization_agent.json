  "type": "visualizer",
  "version": "2.0.0",
  "description": "Specialized AI agent for data visualization, chart generation, and interactive dashboards",

  "capabilities": [
    "data_visualization",
    "chart_generation",
    "dashboard_creation",
    "interactive_visuals",
    "report_design",
    "infographic_creation",
    "animation_effects",
    "responsive_design"
