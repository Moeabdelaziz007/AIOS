rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    function isValidUser() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    function isValidRating(rating) {
      return rating is number && rating >= 1 && rating <= 5;
    }
    
    function isValidTimestamp(ts) {
      return ts is timestamp;
    }
    
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Operating systems - public read, admin write
    match /operating_systems/{osId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow delete: if isSuperAdmin();
    }
    
    // Features - public read, admin write
    match /features/{featureId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow delete: if isSuperAdmin();
    }
    
    // OS Features (many-to-many) - public read, admin write
    match /os_features/{osFeatureId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow delete: if isSuperAdmin();
    }
    
    // Reviews - users can read all, write their own
    match /reviews/{reviewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.auth.uid == resource.data.userId &&
        isValidRating(resource.data.rating) &&
        isValidTimestamp(resource.data.createdAt);
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Favorites - users can read/write their own
    match /favorites/{favoriteId} {
      allow read, write: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && 
        request.auth.uid == resource.data.userId &&
        isValidTimestamp(resource.data.createdAt);
    }
    
    // Comparisons - public read, users can write their own
    match /comparisons/{comparisonId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.auth.uid == resource.data.userId &&
        isValidTimestamp(resource.data.createdAt);
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // System logs - admin only
    match /system_logs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // AIOS specific collections
    
    // Quantum Autopilot data - authenticated users can read, admin write
    match /quantum_autopilot/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Error logs - authenticated users can read, system can write
    match /error_logs/{logId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Fix patterns - authenticated users can read, system can write
    match /fix_patterns/{patternId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // System monitoring - authenticated users can read, system can write
    match /system_monitoring/{monitorId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Learning data - authenticated users can read, system can write
    match /learning_data/{dataId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // User interactions - users can read their own, system can write
    match /user_interactions/{interactionId} {
      allow read: if isOwner(resource.data.userId);
      allow write: if isAuthenticated();
    }
    
    // Guest data - limited access for anonymous users
    match /guest_data/{docId} {
      allow read, write: if isAuthenticated();
    }
    
    // Public data - read-only for authenticated users
    match /public_data/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Test collections - authenticated users can read/write
    match /test_collections/{docId} {
      allow read, write: if isAuthenticated();
    }
    
    // Setup test collections - authenticated users can read/write
    match /setup_test/{docId} {
      allow read, write: if isAuthenticated();
    }
    
    // Final test collections - authenticated users can read/write
    match /final_test/{docId} {
      allow read, write: if isAuthenticated();
    }
    
    // Session data - users can read their own sessions
    match /sessions/{sessionId} {
      allow read, write: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && 
        request.auth.uid == resource.data.userId;
    }
    
    // Performance metrics - authenticated users can read, system can write
    match /performance_metrics/{metricId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Agent data - authenticated users can read, system can write
    match /agent_data/{agentId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // MCP sessions - authenticated users can read their own
    match /mcp_sessions/{sessionId} {
      allow read, write: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && 
        request.auth.uid == resource.data.userId;
    }
    
    // Telegram bot data - admin only
    match /telegram_data/{docId} {
      allow read, write: if isAdmin();
    }
    
    // Cursor CLI data - authenticated users can read, system can write
    match /cursor_data/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Gemini AI data - authenticated users can read, system can write
    match /gemini_data/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Apps collection - authenticated users can read, system can write
    match /apps/{appId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // System collection - authenticated users can read, system can write
    match /system/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}