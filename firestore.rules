// Firebase Security Rules for AIOS Project
// These rules ensure secure access to Firestore collections

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Agents collection - authenticated users can read/write
    match /agents/{agentId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Workflows collection - authenticated users can read/write
    match /workflows/{workflowId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Conversations collection - users can only access their own conversations
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.uid in resource.data.participants);
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants;
    }
    
    // Learning Data collection - authenticated users can read/write
    match /learningData/{learningId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // System Logs collection - authenticated users can read, only system can write
    match /systemLogs/{logId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Automation Data collection - authenticated users can read/write
    match /automationData/{automationId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Growth Metrics collection - authenticated users can read/write
    match /growthMetrics/{metricId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Predictive Data collection - authenticated users can read/write
    match /predictiveData/{predictionId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Resource Metrics collection - authenticated users can read/write
    match /resourceMetrics/{resourceId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Test collection - for connection testing
    match /test/{testId} {
      allow read, write: if request.auth != null;
    }
    
    // Public data - anyone can read
    match /public/{publicId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Admin only collections
    match /admin/{adminId} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Default deny rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}